# javascript

for (var=startvalue;var<=endvalue;var=var+increment) 
{
code to be executed
}

while (var<=endvalue)
{
    code to be executed

}

do
{
    code to be executed
}
while (var<=endvalue)

for (variable in object)
{
    code to be executed
}

